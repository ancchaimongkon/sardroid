{
    "extends": [
        "airbnb/legacy",
        "angular"
    ],
    plugins   : ["angular"],
    "env": {
        "angular/angular": true
    },
    "globals": {
        "ContactField": true,
        "RecordRTC": true,
        "Peer": true,
        "Draggabilly": true,
        "Promise": true,
        "intlTelInputUtils": true,
        "_": true,
        "cordova": true,
        "fabric": true,
        "io": true,
        "xwalk": true
    },
    "rules": {
        "indent":  [2, 4],
        "max-len": [2, 120, 4],
        "func-names": 0,
        "default-case": 0,
        "no-param-reassign": 0,
        "no-multi-spaces": 0,
        "no-console": 0,
        "key-spacing": 0,
        "angular/controller-as-route": 0,
        "angular/controller-as": 0,
        "angular/controller-name": 0,
        "angular/interval-service": 0,
        "angular/on-watch": 0
    }
}
